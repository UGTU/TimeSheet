@model TimeSheetMvc4WebApplication.Models.PaperModel
@*<br/> *@
<hr style="color: grey" />
<table border="0" style="width: 100%; color: grey">

    <tr>
        <td style="width: 20%">Документ № @Model.TimeSheetNum</td>
        <td style="width: 60%; text-align: center" class="url" url="@Html.Raw(@Url.Action("Pdf", "TsShow", new { id = Model.TimeSheetNum }, Request.Url.Scheme))">
        Ссылка на документ: @Html.Raw(@Url.Action("Pdf", "TsShow", new { id = Model.TimeSheetNum }, Request.Url.Scheme))</td>
        <td style="width: 20%; text-align: right">Лист @Model.PaperNum из @Model.PaperOf</td>
    </tr>
    <tr>
        <td colspan="3" style="text-align: center">Сформировано через информационную систему табельного учёта рабочего времени (@Html.Raw(@Url.Action("Index", "Main", null, Request.Url.Scheme)))</td>
    </tr>
</table>
<script>
$(".url").hover(
function () {
    $(this).css('cursor', 'pointer');
},
function () {
    $(this).css('cursor', 'default');
});
$(".url").click(function () {
    window.location.href = $(this).attr('url');
});
</script>