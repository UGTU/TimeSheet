@if (!Model.IsFake)
{
    if (Model.IsAdvance)
    {
        switch (Model.ApproveStep)
        {
            case 0:
                <span class="label label-danger" data-toggle="tooltip" title="Табель находится в процессе редактирования"><span class="glyphicon glyphicon-edit"></span></span>
                break;
            case 1:
                <span class="label label-info" data-toggle="tooltip" title="Табель находиться в процессе согласования"><span class="glyphicon glyphicon-retweet"></span></span>
                break;
            case 2:
            //case 3://при согласовании авансового табеля сюда заходить не должно, так как до 3 шага (согласование кадрами) доходить не должно
                <span class="label label-success" data-toggle="tooltip" title="Табель успешно согласован"><span class="glyphicon glyphicon-check"></span></span>
                break;
            default:
                break;
        }
    }
    else
    {
        switch (Model.ApproveStep)
        {
            case 0:
                <span class="label label-danger" data-toggle="tooltip" title="Табель находится в процессе редактирования"><span class="glyphicon glyphicon-edit"></span></span>
                break;
            case 1:
            case 2:
                <span class="label label-info" data-toggle="tooltip" title="Табель находиться в процессе согласования"><span class="glyphicon glyphicon-retweet"></span></span>
                break;
            case 3:
                <span class="label label-success" data-toggle="tooltip" title="Табель успешно согласован"><span class="glyphicon glyphicon-check"></span></span>
                break;
            default:
                break;
        }
    }
}
else
{
    <span class="label label-default" data-toggle="tooltip" title="Предоставлен бумажный вариант табеля"><span class="glyphicon glyphicon-file"></span></span>
}