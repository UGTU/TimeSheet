@using TimeSheetMvc4WebApplication.Models
@model TimeSheetAprovalModel
@{
    ViewBag.Title = "Согласование табеля";
    Layout = "../Shared/_Layout.cshtml";
}

@Html.Partial("Header", Model.IdTimeSheet)

<script>
    $("#Approval").addClass("active");
</script>

@*<div class="TimeSheeet">*@
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Согласование табеля</div>
        <div class="panel-body">
            <div class="container" style="margin-right: 30px; margin-top: 15px;">
                @using (Html.BeginForm("TimeSheetApproval", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @*@Html.ValidationSummary()*@
                    @Html.HiddenFor(x => x.ApprovalDate)
                    @Html.HiddenFor(x => x.IdApprover)
                    @Html.HiddenFor(x => x.IdTimeSheet)
                    <div class="form-group">
                        <label class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                             @Html.ValidationSummary()
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Виза:</label>
                        <div class="col-lg-10">
                            @Html.DropDownListFor(x => x.ApprovalResult, new[]
                        {
                            new SelectListItem {Text = "Согласовать табель", Value = bool.TrueString},
                            new SelectListItem {Text = "Отклонить табель", Value = bool.FalseString}
                        }, "Выберете вариант...", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword1" class="col-lg-2 control-label">Комментарии:</label>
                        <div class="col-lg-10">
                            @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", @row = "3", @style="resize:vertical;" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-default" style="width: 100px">Ок</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



<br />
<div class="TimeSheeet" style="padding: 20px;">
    @foreach (TimeSheetModel timeSheet in ViewBag.TimeSheetModel)
    {
        @Html.Partial("PartialView/TimeSheetPartialView", timeSheet)
    }
</div>

@{
    Html.RenderPartial("HeaderLinks", new HeaderLinckModel
    {
        Links = new HeaderLink[4] { HeaderLink.Edit, HeaderLink.Show, HeaderLink.Pdf, HeaderLink.Approve },
        CurrentLink = HeaderLink.Approve,
        IdTimeSheet = Model.IdTimeSheet
    });
}

@*</div>*@





