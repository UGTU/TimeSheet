@using TimeSheetMvc4WebApplication
@using TimeSheetMvc4WebApplication.Controllers
@{
    var baseController = new BaseController();
    var approver = baseController.GetCurrentApprover();
    var userName = baseController.GetUsername();
    if (approver != null)
    {
        userName = String.Format("{0} {1} {2}", approver.Surname, approver.Name, approver.Patronymic);
    }
}

<nav class="navbar navbar-default" style="border-radius: 0;" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index","Main")">
                <img style="height: 30px; margin-top: 8px; margin-right: 5px; float: left;" src="../../Content/Images/logo.png">
            </a>
            <a class="navbar-brand" href="@Url.Action("Index","Main")">Табель</a>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav" id="HeaderLiBox"></ul>
            <ul class="nav navbar-nav navbar-right">
                @if (approver != null && approver.IsAdministrator)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> @userName <b class="caret"></b></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("ExceptionDay", "Admin")"><span class="glyphicon glyphicon-calendar"></span> Выходные дни и праздники</a></li>
                            <li><a href="@Url.Action("DepartmentManagment","Admin")"><span class="glyphicon glyphicon-briefcase"></span> Структурные подразделения</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li><a><span class="glyphicon glyphicon-user"></span> @userName</a></li>
                }
                <li>
                    <a id="ug" href="@Url.Action("Download","Main")" data-placement="bottom" data-toggle="tooltip" title="Просмотреть руководством пользователя" target="_blank" style="color: #777777"><span class="glyphicon glyphicon-question-sign"></span></a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
    $('#ug').tooltip('hide');
</script>
