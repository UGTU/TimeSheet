<UserControl x:Class="TimeSheetClient.Controls.DepartmentApproverControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="55" d:DesignWidth="400">
    <Grid x:Name="LayoutRoot" Background="White">
        <TextBlock x:Name="ApproverStatusTextBlock" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <ComboBox x:Name="ApproverComboBox" Margin="185,28,10,0" VerticalAlignment="Top" SelectionChanged="ApproverComboBox_SelectionChanged" />
        <TextBox x:Name="ApproverLoginTextBox" HorizontalAlignment="Left" Height="23" Margin="10,26,5,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" TextChanged="ApproverLoginTextBox_TextChanged"/>
        <Ellipse Name="ApproverTrigget" Fill="#FFF4F4F5" HorizontalAlignment="Right" Height="10" Margin="0,10,10,0" Stroke="Black" VerticalAlignment="Top" Width="10"/>
        <Ellipse Name="LoginTrigget" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="10" Margin="160,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="10"/>
    </Grid>
</UserControl>
